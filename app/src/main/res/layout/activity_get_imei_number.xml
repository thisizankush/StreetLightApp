<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/serialNumberList_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            android:weightSum="2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="0.75"
                android:fontFamily="@font/roboto"
                android:text="Luminary Serial Number(ल्यूमिनेरी क्रमिक संख्या)"
                android:textColor="#4CA85E"
                android:textSize="18sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/serialNumberList"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="1.25"
                android:background="@drawable/grey_outline"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14sp"
            android:textColorHint="@color/black"
            android:visibility="gone"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:suffixText="U">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/simnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_outline"
                android:hint="Sim Number"
                android:inputType="number"
                android:maxLength="19"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:id="@+id/getImeiNumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#344767"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:visibility="gone" />

            <TextView
                android:id="@+id/getImeiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:gravity="end"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</layout>