<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:padding="4dp"
                    android:text="Specify the Name of Manufacture of POLE/STRUCTURE/HARDWARE"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <EditText
                    android:id="@+id/tvThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:background="@drawable/rectangle_border"
                    android:hint="Solar System" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:visibility="gone"></LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOned"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:padding="4dp"
                    android:fontFamily="@font/roboto_italic"
                    android:text="Length(Meter) and Size(Dia in mm) of installed Pole"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <EditText
                    android:id="@+id/tvThreeda"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:background="@drawable/rectangle_border"
                    android:hint="WAF457" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Grouting of Pole (300 * 300 * 1000 mm below the ground) - Yes/No"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    android:id="@+id/spin1"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Fixing of Module and LED light (Yes/No)"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="UID No. is properly embossed/punched on the system/pole (Yes/No)"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Sign board installed at pole properly (Yes/No)"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="All the cable should be multi strand copper conductor properly insulated and sheathed (Yes/No)"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Training for operation and maintenance of the system (Yes/No)"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="	Technical literature, operation and maintenance manual with in English/Hindi (Yes/No)	"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Remarks "
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
