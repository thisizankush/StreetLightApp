<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Sr No of Module"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <EditText
                    android:id="@+id/tvThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:background="@drawable/rectangle_border"
                    android:hint="Solar System" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:visibility="gone"></LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOned"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:fontFamily="@font/roboto_italic"
                    android:text="Agreement Number"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <EditText
                    android:id="@+id/tvThreeda"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:background="@drawable/rectangle_border"
                    android:hint="WAF457" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAgency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Executing Agency"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <EditText
                    android:id="@+id/edAgency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:background="@drawable/rectangle_border"
                    android:hint="BREDA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBeneficiary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:fontFamily="@font/roboto_italic"
                    android:text="Name of Beneficiary"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <EditText
                    android:id="@+id/edBeneficiary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textCursorDrawable="@color/black"
                    android:textColor="@color/black"
                    android:background="@drawable/rectangle_border"
                    android:hint="Sushil" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="SVP Module Type"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/dis"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    android:id="@+id/spin"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Make of Module"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/block"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    android:id="@+id/spin1"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Model No:"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/panch"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    android:id="@+id/spin2"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Model Wattage"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/panch"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Is the SSLs installed at shadow free (Yes/No)"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/panch"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:text="Tilt Angle of Module to true south"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/panch"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:fontFamily="@font/roboto_italic"
                    android:text="Module is fixed properly to withstand wind loading of 150 km/hr of wind velocity"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:prompt="@string/panch"
                    android:spinnerMode="dialog"
                    android:background="@drawable/rectangle_border"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWarranty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:fontFamily="@font/roboto_italic"
                    android:text="Warrantee Expire"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <EditText
                    android:id="@+id/edWarranty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textCursorDrawable="@color/black"
                    android:textColor="@color/black"
                    android:background="@drawable/rectangle_border"
                    android:hint="2/09/22" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_NameAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".75"
                    android:fontFamily="@font/roboto_italic"
                    android:text="gku"
                    android:textColor="@color/black"
                    android:textFontWeight="700" />

                <EditText
                    android:id="@+id/ed_NameAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:textColor="@color/black"
                    android:background="@drawable/rectangle_border"
                    android:hint="Rahul,bihar" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
